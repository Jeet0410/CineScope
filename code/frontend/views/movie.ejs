<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
  <title><%= movie.title %> - CineScope</title>
</head>
<body>
  <header class="bg-dark text-white py-3">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">CineScope</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/popular">Popular Movies</a>
              </li>
            </ul>
            <form class="d-flex me-3" action="/search" method="get">
              <input
                class="form-control me-2"
                type="search"
                name="q"
                placeholder="Search for movies..."
                aria-label="Search"
              />
              <button class="btn btn-dark" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
              </svg></button>
            </form>
            <% if (username) { %>
                <!-- User Dropdown -->
                <div class="dropdown">
                  <button
                    class="btn btn-outline-warning dropdown-toggle"
                    type="button"
                    id="userDropdown"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                  >
                    <%= username %>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="/logout">Logout</a></li>
                  </ul>
                </div>
              <% } else { %>
                <!-- Login and Sign-Up Buttons -->
                <a href="/login" class="btn btn-outline-light me-2">Login</a>
                <a href="/signup" class="btn btn-warning">Sign-Up</a>
              <% } %>
            </div>
          </div>
        </div>
      </nav>
      
    </div>
  </header>
  <main class="container mt-5">
    <div class="row">
      <div class="col-md-4">
        <img
          src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>"
          alt="<%= movie.title %>"
          class="img-fluid"
        >
      </div>
      <div class="col-md-8">
        <h1><%= movie.title %></h1>
        <p><%= movie.overview %></p>
        <h3>Details</h3>
        <ul>
          <li><strong>Release Date:</strong> <%= movie.release_date %></li>
          <li><strong>Rating:</strong> <%= movie.vote_average %>/10</li>
        </ul>
        <a href="<%= movie.homepage %>" class="btn btn-primary" target="_blank">Visit Official Site</a>
      </div>
    </div>
    <hr>
    <div class="mt-5">
        <h3>User Reviews</h3>
        <form action="/movie/<%= movie.id %>/review" method="POST" class="mb-4">
          <div class="mb-3">
            <textarea name="review_text" class="form-control" rows="4" placeholder="Write your review..." required></textarea>
          </div>
          <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <select name="rating" class="form-select" required>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
          </div>
          <button type="submit" class="btn btn-success">Submit Review</button>
        </form>
        
        <div id="reviews">
            <% if (reviews.length > 0) { %>
              <% reviews.forEach(review => { %>
                <div class="alert alert-secondary">
                  <strong><%= review.username %></strong>: <br><%= review.review_text %> <br>
                  <small>Rating: <%= review.rating %>/5</small>
                </div>
              <% }); %>
            <% } else { %>
              <p>No reviews yet.</p>
            <% } %>
          </div>      
    </div>
  </main>
  <footer class="bg-dark text-white text-center py-3 mt-5">
    <p>&copy; 2024 CineScope</p>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"></script>

</body>
</html>
